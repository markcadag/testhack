<%= form_for [@topic, Answer.new], :remote => true do |f| %>
  <% if user_signed_in? %>
  	<%= f.text_area :content, class: "form-control col-lg-8", placeholder: "Provide answer here." %>
	<%= f.hidden_field :topic_id, :value => @topic.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<div class="actions">
		<%= f.submit "Add Answer", :class => "btn def-btn" %>
	</div>
  <% else %>
  	<div class="field">
		<%= f.text_area :content, class: "form-control col-lg-8", placeholder: "Provide answer here." %>
	</div>
	<div class="actions">
		<%= f.submit "Add Answer", :class => "btn def-btn" %>
	</div>
  <% end %>
<% end %>